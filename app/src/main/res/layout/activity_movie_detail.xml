<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGray"
    tools:context="com.solitudeycq.hotmovies.activity.MovieDetailActivity">
    <TextView
        android:id="@+id/movie_name_txt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="电影名字"
        android:gravity="center_vertical"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlue"
        android:paddingLeft="20dp"/>
    <LinearLayout
        android:id="@+id/lll"
        android:layout_below="@id/movie_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorLightGray">
        <LinearLayout
            android:id="@+id/picture_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">
                <ImageView
                    android:id="@+id/movie_pic"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/test"/>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">
                    <RelativeLayout
                        android:background="@color/colorLightGray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/releaseyear_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:text="1991"
                            android:textSize="30sp"/>
                        <TextView
                            android:id="@+id/rating_txt"
                            android:layout_below="@id/releaseyear_txt"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="9.0/10"
                            android:textSize="20sp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorLightGray">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">
                            <TextView
                                android:layout_marginTop="2dp"
                                android:textSize="25sp"
                                android:text="@string/detail_original_title"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <ScrollView
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/detail_original_title"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:text="@string/detail_default_original_title"/>
                            </ScrollView>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_marginTop="2dp"
                                android:textSize="25sp"
                                android:gravity="center"
                                android:text="@string/detail_vote_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="2dp"
                                android:textSize="16sp"
                                android:gravity="center"
                                android:id="@+id/detail_vote_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/picture_text"
            android:background="@color/colorLightGray">
            <TextView
                android:id="@+id/movie_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:lineSpacingExtra="2dp"
                android:textSize="18sp"
                android:text="@string/default_movie_overview"/>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
